
<link rel="stylesheet" href="/login.css"> 
  <p><%= @message %></p>
<div class="login-three-columns">
  

  
  <form action="/login/submit" method="post">
    
    <div class="larger-column-wide">
      <label for='log_in[contact_info]' class="white arial">Email or Phone</label>
      <input type="text" name='log_in[contact_info]' class="longer-input-width">
      <input type="checkbox" name='log_in[keep_me_logged]' class="inline"><div class="white arial transparent inline">Keep me logged in</div>
    </div>
  
    <div class="larger-column-wide">
      <label for='log_in[password]' class="white arial">Password</label>
      <input type="password" name='log_in[password]' class="longer-input-width">
      <a href="/login/forgot" class="white arial transparent">Forgot your password?</a>
    </div>
    
    <div class="smaller-column-width">
      <button type="submit" class="white arial blue-button small-button">Log In</button>
    </div>
  
    <div style="clear: both"></div>
  </form>

</div>




