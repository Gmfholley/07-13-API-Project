<!doctype html>
<html>
  <head>
    <title><%= @title || "Sinatra Quiz Game" %></title>
    <link rel="stylesheet" href ="/global.css">
    <script src="/global.js" type="text/javascript"></script>
  </head>
  <body>
    
    <header>
      <a href="../../home"><h1 class="white large first-color-background hover-underline">Wellness Tracker</h1></a>
      <img id="menu-icon" src="../../menu.svg" alt="menu">
      <nav id="pop-up-menu" class="second-color-background white pop-up-menu pop-up-menu-hidden">
        <ul>  
        <% @nav_menu.menu_items.each do |item| %>
          <li class="left"><a class="no-underline hover-underline border-right white capitalize" href = "/<%= item.method.method_name %>"> <%= item.user_message.join %> </a></li>
          <% end %>
          <div style="clear: both"></div>
        </ul>
      </nav>
    </header>
    
    
    <%= yield %>
    
    
    <footer class="second-color-background white">
      All rights reserved.  Contact <a class="white no-underline hover-underline" href="mailto:my_email@domain.com">the webmaster.</a> 
    </footer>
  </body>
</html>

